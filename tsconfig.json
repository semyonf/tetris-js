{
  // TODO: configure
  "compilerOptions": {
    "noUnusedLocals": true,
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
